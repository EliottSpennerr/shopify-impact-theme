x solid white; box-shadow: 0 0 4px rgba(0,0,0,0.2);\"></div>';\n\n    const clusterGroup = L.markerClusterGroup({\n      showCoverageOnHover: false,\n      maxClusterRadius: 40,\niconCreateFunction: function (cluster) {\n  const count = cluster.getChildCount();\n  return L.divIcon({\n    html: `\n      <div style=\"\n        background: #0B61FA;\n        color: white;\n        border-radius: 50%;\n        width: 40px;\n        height: 40px;\n        display: flex;\n        align-items: center;\n        justify-content: center;\n        font-size: 14px;\n        font-weight: bold;\n        box-shadow: 0 0 6px rgba(0,0,0,0.2);\n      \">\n        ${count}\n      </div>`,\n    className: '',\n    iconSize: [40, 40]\n  });\n}\n    });\n\n    stores.forEach(store => {\n      const gmapsUrl = `https://www.google.com/maps/search/?api=1&query=${store.lat},${store.lng}`;\n      const marker = L.marker([store.lat, store.lng], {\n        icon: L.divIcon({\n          html: customMarkerHTML,\n          className: '',\n          iconSize: [12, 12],\n          iconAnchor: [6, 6]\n        })\n      }).bindPopup(`<b>${store.name}</b><br>${store.address}<br><a href=\"${gmapsUrl}\" target=\"_blank\">Hitta hit ‚Üí</a>`);\n\n      clusterGroup.addLayer(marker);\n    });\n\n    map.addLayer(clusterGroup);\n\n    // S√∂kfunktion\n    document.getElementById('search').addEventListener('input', function (e) {\n      const query = e.target.value.toLowerCase();\n      const filtered = stores.filter(store =>\n        store.name.toLowerCase().includes(query) || store.address.toLowerCase().includes(query)\n      );\n\n      clusterGroup.clearLayers();\n\n      filtered.forEach(store => {\n        const gmapsUrl = `https://www.google.com/maps/search/?api=1&query=${store.lat},${store.lng}`;\n        const marker = L.marker([store.lat, store.lng], {\n          icon: L.divIcon({\n            html: customMarkerHTML,\n            className: '',\n            iconSize: [12, 12],\n            iconAnchor: