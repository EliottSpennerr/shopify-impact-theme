{% doc %}
  @prompt
    Gör en header med bild, titel subtitel och köp nu knapp.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-header-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    display: block;
  }

  .ai-hero-header__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.section_height_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    .ai-hero-header__image-wrapper-{{ ai_gen_id }} {
      height: {{ block.settings.section_height_desktop }}px;
    }
  }

  .ai-hero-header__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-hero-header__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-hero-header__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-hero-header__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-hero-header__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
  }

  .ai-hero-header__content-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: {{ block.settings.content_position_vertical }};
    align-items: {{ block.settings.content_position_horizontal }};
    padding: 40px 20px;
    text-align: {{ block.settings.text_alignment }};
    z-index: 2;
  }

  @media screen and (min-width: 750px) {
    .ai-hero-header__content-{{ ai_gen_id }} {
      padding: 60px 40px;
    }
  }

  .ai-hero-header__content-inner-{{ ai_gen_id }} {
    max-width: {{ block.settings.content_max_width }}px;
  }

  .ai-hero-header__title-{{ ai_gen_id }} {
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_size_mobile }}px;
    margin: 0 0 16px;
    font-weight: 600;
    line-height: 1.2;
  }

  @media screen and (min-width: 750px) {
    .ai-hero-header__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size_desktop }}px;
    }
  }

  .ai-hero-header__subtitle-{{ ai_gen_id }} {
    color: {{ block.settings.subtitle_color }};
    font-size: {{ block.settings.subtitle_size_mobile }}px;
    margin: 0 0 24px;
    line-height: 1.5;
  }

  @media screen and (min-width: 750px) {
    .ai-hero-header__subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtitle_size_desktop }}px;
    }
  }

  .ai-hero-header__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 14px 32px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .ai-hero-header__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
  }
{% endstyle %}

<hero-header-{{ ai_gen_id }}
  class="ai-hero-header-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-hero-header__image-wrapper-{{ ai_gen_id }}">
    {% if block.settings.image %}
      <img
        src="{{ block.settings.image | image_url: width: 2000 }}"
        alt="{{ block.settings.image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
        class="ai-hero-header__image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-hero-header__placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
        <div class="ai-hero-header__empty-state-{{ ai_gen_id }}">
          Lägg till en bakgrundsbild
        </div>
      </div>
    {% endif %}

    <div class="ai-hero-header__overlay-{{ ai_gen_id }}"></div>

    <div class="ai-hero-header__content-{{ ai_gen_id }}">
      <div class="ai-hero-header__content-inner-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h1 class="ai-hero-header__title-{{ ai_gen_id }}">
            {{ block.settings.title }}
          </h1>
        {% endif %}

        {% if block.settings.subtitle != blank %}
          <div class="ai-hero-header__subtitle-{{ ai_gen_id }}">
            {{ block.settings.subtitle }}
          </div>
        {% endif %}

        {% if block.settings.button_text != blank %}
          <a
            href="{{ block.settings.button_link }}"
            class="ai-hero-header__button-{{ ai_gen_id }}"
          >
            {{ block.settings.button_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</hero-header-{{ ai_gen_id }}>

